{% schema %}
{
  "name": "Featured Images",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Our Features"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "range",
      "id": "desktop_column",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Desktop Column"
    },
    {
      "type": "select",
      "id": "mobile_column",
      "label": "Mobile Column",
      "options": [
        {
          "label": "1",
          "value": "1"
        },
        {
          "label": "2",
          "value": "2"
        }
      ],
      "default": "2"
    }
  ],
  "blocks": [
    {
      "type": "image_tile",
      "name": "Image Tile",
      "settings": [
        {
          "type": "image_picker",
          "id": "tile_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "tile_title",
          "label": "Title",
          "default": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "tile_description",
          "label": "Description",
          "default": "Short description of the feature."
        },
        {
          "type": "url",
          "id": "tile_link",
          "label": "Link",
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Images",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

{%  style %} 
  :root {
    --tw: 100%;
    --th: 100%;
  }

  .featured-images-section {
    text-align: center;
    padding: 40px 20px;
  }

  .featured-images-section h2 {
    margin-bottom: 40px;
  }

  .featured-images-grid {
    gap: 20px;
    display: grid;
    max-width: 1320px;
    grid-template-columns: repeat({{ section.settings.mobile_column }}, 1fr);
  }

  @media screen and (min-width: 768px) {
    .featured-images-grid {
      grid-template-columns: repeat({{ section.settings.desktop_column }}, 1fr);
      margin: 0 0;
    }
  }
  
  .featured-image-tile {
    text-align: center;
    width: var(--tw);
  }

  .featured-image-tile > * {
    width: 100%;
    height: var(--th);
    object-fit: cover;
    border-radius: 8px;
  }
{% endstyle %}
<div class="featured-images-section">
  <h2>{{ section.settings.section_heading }}</h2>
  <div class="featured-images-grid">
    {% for block in section.blocks %}
      {% if block.type == 'image_tile' %}
        <div class="featured-image-tile">
          <a href="{{ block.settings.tile_link }}" class="tile-link">
            {% liquid
              assign index = forloop.index
              for i in (1..index)
                capture current
                  cycle 1, 2, 3, 4, 5, 6
                endcapture
              endfor
              assign placeholder_image = 'collection-' | append: current
            %}
            {% if block.settings.tile_image != blank %}
              {{ block.settings.tile_image | image_url: width: 387 | image_tag }}
            {% else %}
              <div style="--aspect-ratio: 1/1;">
                {{ placeholder_image | placeholder_svg_tag: 'm-placeholder-svg' }}
              </div>
            {% endif %}
            <div class="tile-content">
              <h3>{{ block.settings.tile_title }}</h3>
              <p>{{ block.settings.tile_description }}</p>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
